generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model InvestimentGoals {
  id            String   @id @default(uuid())
  name          String
  total_amount   Float
  monthly_amount Float
  months        Months[]
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@map("investiment_goals")
}

enum Months {
  JANUARY
  FEBRUARY
  MARCH
  APRIL
  MAY
  JUNE
  JULY
  AUGUST
  SEPTEMBER
  OCTOBER
  NOVEMBER
  DECEMBER
}